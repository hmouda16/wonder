{%extends "base.html.twig"%}

{% block tite %}
	{{user.fullname}}
{% endblock %}

{% block body %}
	<div class="block mb-20">
		<h2 class="pb-30">{{user.fullname}}</h2>
		<div class="d-flex flex-row-nowrap">
			<img src="{{asset(user.picture)}}" class="mr-10 profile-picture" alt="">
			<ul>
				<li>
					<strong class="mb-10">Prénom:</strong>
					{{user.firstname}}
				</li>
				<li>
					<strong class="mb-10">Nom:</strong>
					{{user.lastname}}
				</li>
				<li>
					<strong class="mb-10">Email:</strong>
					{{user.email}}
				</li>
			</ul>
		</div>
	</div>

	<div class="block mb-20">
		<h3 class="pb-30">Questions</h3>
		<ul>
			{% for question in user.questions %}
				<li>{{question.title}}</li>
			{% endfor %}
		</ul>
	</div>


	<div class="block mb-20">
		<h3 class="pb-30">Réponses</h3>
		<ul>
			{% for comment in user.comments %}
				<li>{{comment.content | slice(0,50)}}...</li>
			{% endfor %}
		</ul>
	</div>
{% endblock %}
